@{
    ViewData["Title"] = "Add a Movie";
}

@* Importing the "Movie" Model (class) *@
@model Mission06_murdodav.Models.Movie


<div class="text-center">

    <h1 class="mt-1">Add a Movie to the Collection</h1>


    <div class="container pt-5">
        <div class="row">

            <div class="col-md-2"></div>

            <div class="col-md-8">
                <div class="card border-primary mb-3">
                    <div class="card-header">Add a Movie</div>
                    <div class="card-body p-3" style="padding: 0px 100px 10px 100px;">
                        <p class="text-center">Enter the following information to add a movie to your movie collection:</p>

                        <form method="POST">
                            @* Showing all form validation errors *@
                            <div asp-validation-summary="All"></div>
                            <fieldset>
                                <!-- Category Dropdown -->
                                <div class="form-group">
                                    <label for="category" class="form-label mt-4">Category</label>
                                    <select asp-for="Category" class="form-select" id="category" name="category" required>
                                        <option>Action/Adventure</option>
                                        <option>Comedy</option>
                                        <option>Drama</option>
                                        <option>Family</option>
                                        <option>Horror/Suspense</option>
                                        <option>Miscellaneous</option>
                                        <option>Television</option>
                                        <option>VHS</option>
                                    </select>
                                </div>

                                <!-- Title Text Input -->
                                <div class="form-group">
                                    <label class="col-form-label mt-4" for="title">Title</label>
                                    <input type="text" asp-for="Title" class="form-control" placeholder="Title" id="title" name="title" required>
                                </div>

                                <!-- Year Number Input -->
                                <div class="form-group">
                                    <label class="col-form-label mt-4" for="year">Year</label>
                                    <input type="number" asp-for="Year" class="form-control" placeholder="2023" id="year" name="year" step="1" required>
                                </div>

                                <!-- Director Text Input -->
                                <div class="form-group">
                                    <label class="col-form-label mt-4" for="director">Director</label>
                                    <input type="text" asp-for="Director" class="form-control" placeholder="Director" id="director" name="director" required>
                                </div>

                                <!-- Rating Dropdown Input -->
                                <div class="form-group">
                                    <label for="rating" class="form-label mt-4">Rating</label>
                                    <select asp-for="Rating" class="form-select" id="rating" name="rating" required>
                                        <option>G</option>
                                        <option>PG</option>
                                        <option>PG-13</option>
                                        <option>R</option>
                                    </select>
                                </div>

                                <!-- Edited Checkbox Switch Input -->
                                <div class="pt-4">Edited</div>
                                <div class="col-xs-2 text-xs-center">
                                    <div class="form-check form-switch" style="margin-top: 8px">
                                        <label class="form-check-label text-xs-center" for="edited">
                                            <input asp-for="Edited" class="form-check-input" type="checkbox" id="edited" name="edited" style="height:30px; width:50px;">
                                        </label>
                                    </div>
                                </div>

                                <!-- Lent To Text Input -->
                                <div class="form-group">
                                    <label class="col-form-label mt-3" for="lent-to">Lent To</label>
                                    <input type="text" asp-for="LentTo" class="form-control" placeholder="Lent To" id="lent-to" name="lent-to">
                                </div>

                                <!-- Notes Text Input -->
                                <div class="form-group">
                                    <label class="col-form-label mt-4" for="notes">Notes</label>
                                    <input type="text" asp-for="Notes" class="form-control" placeholder="Notes" id="notes" name="notes" maxlength="25">
                                </div>

                                <!-- Submit Button -->
                                <button type="submit" class="btn btn-primary mt-3">Add Movie</button>

                            </fieldset>

                        </form>

                    </div>
                </div>
            </div>

            <div class="col-md-2"></div>

        </div>
    </div>
</div>
