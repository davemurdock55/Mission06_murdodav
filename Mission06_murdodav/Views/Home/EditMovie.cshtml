@{
    ViewData["Title"] = "Edit a Movie";
}

@* Importing the "Movie" Model (class) *@
@model Mission06_murdodav.Models.Movie


<div class="text-center">

    <h1 class="mt-3">Edit A Movie</h1>


    <div class="container mt-3">
        <div class="row">

            <div class="col-md-2"></div>

            <div class="col-md-8">
                <div class="card border-primary mb-3">
                    <div class="card-header">Add a Movie</div>
                    <div class="card-body p-3" style="padding: 0px 100px 10px 100px;">
                        <p class="text-center pb-2" style="font-size: 20px;">Edit the following information to update a movie in your movie collection:</p>
                        <div class="table-group-divider"></div>
                        <form method="POST" class="text-start px-5">
                            @* Showing all form validation errors *@
                            <div asp-validation-summary="All"></div>
                            <fieldset>
                                <!-- Category Dropdown -->
                                <div class="form-group">
                                    <label asp-for="CategoryID" for="categoryid" class="form-label mt-3 mx-2">Category</label>
                                    <select asp-for="CategoryID" class="form-select" id="categoryid" name="categoryid" required>
                                        <option value="">Select a Category</option>
                                        <!-- for each entry in the ViewBag.Categories list of Category objects, put them in a Category object called "c"-->
                                        @foreach (Category c in ViewBag.Categories)
                                        { 
                                            // Displaying the category name, but setting the categoryid as the value to be submitted
                                            <option value="@c.CategoryID">@c.CategoryName</option>
                                        }
                                    </select>
                                </div>

                                <!-- Title Text Input -->
                                <div class="form-group">
                                    <label class="col-form-label mt-2 mx-2" for="title">Title</label>
                                    <input type="text" asp-for="Title" class="form-control" placeholder="Title" id="title" name="title" required>
                                </div>

                                <!-- Year Number Input -->
                                <div class="form-group">
                                    <label class="col-form-label mt-2 mx-2" for="year">Year</label>
                                    <input type="number" asp-for="Year" class="form-control" placeholder="2023" id="year" name="year" step="1" required>
                                </div>

                                <!-- Director Text Input -->
                                <div class="form-group">
                                    <label class="col-form-label mt-2 mx-2" for="director">Director</label>
                                    <input type="text" asp-for="Director" class="form-control" placeholder="Director" id="director" name="director" required>
                                </div>

                                <!-- Rating Dropdown Input -->
                                <div class="form-group">
                                    <label for="rating" class="form-label mt-2 mx-2">Rating</label>
                                    <select asp-for="Rating" class="form-select" id="rating" name="rating" required>
                                        <option>G</option>
                                        <option>PG</option>
                                        <option>PG-13</option>
                                        <option>R</option>
                                    </select>
                                </div>

                                <!-- Edited Checkbox Switch Input -->
                                <center>
                                    <div class="mt-2">Edited</div>
                                    <div class="col-xs-2 text-xs-center">
                                        <div class="form-check form-switch" style="margin-top: 8px">
                                            <label class="form-check-label text-xs-center" for="edited">
                                                <input asp-for="Edited" class="form-check-input" type="checkbox" id="edited" name="edited" style="height:30px; width:50px;">
                                            </label>
                                        </div>
                                    </div>
                                </center>

                                <!-- Lent To Text Input -->
                                <div class="form-group">
                                    <label class="col-form-label mt-2 mx-2" for="lent-to">Lent To</label>
                                    <input type="text" asp-for="LentTo" class="form-control" placeholder="Lent To" id="lent-to" name="lent-to">
                                </div>

                                <!-- Notes Text Input -->
                                <div class="form-group">
                                    <label class="col-form-label mt-2 mx-2" for="notes">Notes</label>
                                    <input type="text" asp-for="Notes" class="form-control" placeholder="Notes" id="notes" name="notes" maxlength="25">
                                </div>

                                <!-- Submit Button -->
                                <div class="text-center">
                                    <button type="submit" class="btn btn-primary mt-3 mx-2 mb-2">Done</button>
                                </div>

                            </fieldset>

                        </form>

                    </div>
                </div>
            </div>

            <div class="col-md-2"></div>

        </div>
    </div>
</div>
