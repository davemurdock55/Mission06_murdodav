@{
    ViewData["Title"] = "Add a Movie";
}
<div class="text-center">

    <h1 class="mt-1">Add a Movie to the Collection</h1>


    <div class="container pt-5">
        <div class="row">

            <div class="col-md-2"></div>

            <div class="col-md-8">
                <div class="card border-primary mb-3">
                    <div class="card-header">Add a Movie</div>
                    <div class="card-body p-3" style="padding: 0px 100px 10px 100px;">
                        <p class="text-center">Enter the following information to add a movie to your movie collection.</p>

                        <form method="POST">

                            <fieldset>
                                <div class="form-group">
                                    <label for="exampleSelect1" class="form-label mt-4">Category</label>
                                    <select class="form-select" id="exampleSelect1">
                                        <option>Action/Adventure</option>
                                        <option>Comedy</option>
                                        <option>Drama</option>
                                        <option>Family</option>
                                        <option>Horror/Suspense</option>
                                        <option>Miscellaneous</option>
                                        <option>Television</option>
                                        <option>VHS</option>
                                    </select>
                                </div>

                                <div class="form-group">
                                    <label class="col-form-label mt-4" for="inputDefault">Title</label>
                                    <input type="text" class="form-control" placeholder="Title" id="inputDefault">
                                </div>

                                <div class="form-group">
                                    <label class="col-form-label mt-4" for="inputDefault">Year</label>
                                    <input type="number" class="form-control" placeholder="2023" id="inputDefault" min="1900" max="2099" step="1" />
                                </div>

                                <div class="form-group">
                                    <label class="col-form-label mt-4" for="inputDefault">Director</label>
                                    <input type="text" class="form-control" placeholder="Director" id="inputDefault">
                                </div>

                                <div class="form-group">
                                    <label for="exampleSelect1" class="form-label mt-4">Rating</label>
                                    <select class="form-select" id="exampleSelect1">
                                        <option>G</option>
                                        <option>PG</option>
                                        <option>PG-13</option>
                                        <option>R</option>
                                    </select>
                                </div>

                                <div class="pt-4">Edited</div>
                                <div class="col-xs-2 text-xs-center">
                                    <div class="form-check form-switch" style="margin-top: 8px">
                                        <label class="form-check-label text-xs-center" for="flexSwitchCheckDefault">
                                            <input class="form-check-input" type="checkbox" id="flexSwitchCheckDefault" style="height:30px; width:50px;">
                                        </label>
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label class="col-form-label mt-3" for="inputDefault">Lent To</label>
                                    <input type="text" class="form-control" placeholder="Lent To" id="inputDefault">
                                </div>

                                <div class="form-group">
                                    <label class="col-form-label mt-4" for="inputDefault">Notes</label>
                                    <input type="text" class="form-control" placeholder="Notes" id="inputDefault" maxlength="25">
                                </div>

                                <button type="submit" class="btn btn-primary mt-3">Add Movie</button>
                            </fieldset>

                        </form>

                    </div>
                </div>
            </div>

            <div class="col-md-2"></div>

        </div>
    </div>
</div>
